{
  "name": "rds-data-client",
  "version": "0.1.0",
  "description": "A lightweight wrapper on @aws-sdk/client-rds-data that simplifies working with the Amazon Aurora Serverless Data API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license LICENSE.txt",
    "test:unit": "jest --collectCoverage ./__tests__/unit",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "eslintConfig": {
    "rules": {
        "no-var": 0
    }
  },
  "author": "Susovan Ghosh <susovan87@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.10.5",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/parser": "^5.8.1",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.11.0",
    "eslint-plugin-jest": "^26.1.2",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@aws-sdk/client-rds-data": "^3.54.1",
    "underscore": "^1.13.2"
  }
}
